{
  "compilerOptions": {
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "noImplicitAny": false,
    "target": "esnext",
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "rollup.config.js", ".eslintrc.cjs"]
}
