{
  "compilerOptions": {
    "strict": true,
    "declaration": false,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules"],
  "include": ["src", ".eslintrc.cjs"]
}
